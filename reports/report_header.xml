<odoo>
     <template id="report_header" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@name='company_address']" position="replace">
                <span t-field="company.partner_id.name" />
                <span>,</span>
                <span t-field="company.partner_id.street" />
                <span>,</span>
                <span t-field="company.partner_id.street2" />
                <span>,</span>
                <span t-field="company.partner_id.city" />
                <span>,</span>
                <span t-field="company.partner_id.state_id" />
                <span>,</span>
                <span t-field="company.partner_id.country_id" />
                <span>,</span>
                <span> email: </span><span t-field="company.partner_id.email" />
                <span t-field="company.partner_id.website" />
            </xpath>
        </template>
     <report id="action_report_foto_informacion"
            string="Listaxe das fotos en Información"
            model="odoo_basico.informacion" report_type="qweb-pdf"
            name="odoo_basico.report_foto_informacion_template"
            paperformat="paperformat_euro_landscape"
    />
     <template id="report_foto_informacion_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="container">
                        <t t-foreach="docs" t-as="o">
                            <t t-if="o.foto">
                                <div style="page-break-after:always">
                                    <div class="row bg-primary" style="margin: auto; width: 50%; padding: 15px;padding-left: 230px;">
                                        <h3>Descripción</h3>
                                    </div>
                                    <div  class="row" style="margin: auto; width: 50%; padding: 10px;">
                                        <h5><span t-field="o.descripcion" /></h5>
                                    </div>
                                    <div  class="row"  style="margin: auto; width: 55%;">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(o.foto)" style="max-height: 500px;max-width: 500px;"/>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>